<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bencoderer.schaetzitmanager"
          android:versionCode="1"
          android:versionName="1.0-SNAPSHOT">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
  
    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="19"/>

    <application
                 android:name="com.activeandroid.app.Application"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
      
        <meta-data android:name="AA_DB_NAME" android:value="SchaetzItManager.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <provider android:authorities="com.bencoderer.schaetzitmanager" android:exported="false"    
              android:name="com.activeandroid.content.ContentProvider" />
      
        <activity android:name="com.bencoderer.schaetzitmanager.activities.HelloAndroidActivity" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>